<%="#{app_name}-database"%>:
    container_name: <%="#{app_name}-database"%>
    image: mysql:5.7
    environment:
      MYSQL_DATABASE: <%=app_name%>_development
      MYSQL_USER: <%=app_name%>_database_user
      MYSQL_PASSWORD: <%=app_name%>_database_password
      MYSQL_ROOT_PASSWORD: <%=app_name%>_database_password
    restart: "${DOCKER_RESTART_POLICY:-unless-stopped}"
    stop_grace_period: "3s"
    ports:
      - '3306:3306'
    volumes:
      - <%="#{app_name}_data"%>:/var/lib/mysql